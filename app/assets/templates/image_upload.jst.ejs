<div class="large-panel upload-image-panel">
  <div class="uploaded-image-main">
    <div class="active-image">
      <img src="<%= image.escape("url") %>" alt="" />
    </div>
  </div>
  <div class="thumbnail-images">
    <% transformedUrls.forEach(function(transformedUrl){ %>
      <div class="gutter-image col-xs-2 col-md-2">
        <img src="<%= transformedUrl %>" alt="" />
      </div>
    <%  }) %>
  </div>
  <form class="upload-form">
    <input type="text" name="caption" placeholder="Add a caption..."><br><br>
    <input type="text" name="location" class="location-entry" placeholder="Add a location...">
    <div class="location-error">
    </div>
    <br>
    <div class="upload-decision-buttons">
      <button type="button" name="cancel" class="btn btn-danger">Cancel</button>
      <input type="submit" value="Share" class="btn btn-success">
    </div>
  </form>
</div>
